<%= link_to 'Home', root_path %>
<%= form_tag "/authors", method: "GET" do %>
    <%= label_tag :Name %>
    <%= text_field_tag :search_by_authorname , params[:search_by_authorname ] %>
    <%= submit_tag "Search" %>
    <% end %>
  <br>
  <table  style = "border:2px solid black">
  <tr>
      <th  style = "border:1px solid black">Authors Name</th>
      <th  style = "border:1px solid black">Edit</th>
      <th  style = "border:1px solid black">Delete</th>
    </tr>
    <% @authors.each do |author| %>
    <tr>
    <td><%= link_to author.name, author %></td>
      <td style = "border:1px solid black"><%= link_to "Edit", edit_author_path(author) %></td>
      <td  style = "border:1px solid black"><%= link_to "Destroy", author_path(author), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
    </tr>
    <% end %>
  </table>
  <br>
  <%= link_to "New Author", new_author_path %>